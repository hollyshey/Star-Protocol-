def combine_bits(a, b): if a == SILENCE and b == SILENCE: return 'Ù‡ÛŒÚ†' elif a == 0 and b == 1 or a == 1 and b == 0: return 'ØªØ¹Ø§Ù…Ù„' elif (a == 0 and b == SILENCE) or (a == SILENCE and b == 0): return 'Ù†ÛŒÙ…Ù‡ ÙØ¹Ø§Ù„' elif (a == 1 and b == SILENCE) or (a == SILENCE and b == 1): return 'Ù†ÛŒÙ…Ù‡ Ø®Ø§Ù…ÙˆØ´' else: return 'Ù†Ø§Ù…Ø´Ø®Øµ'

----- ØªØ§Ø¨Ø¹ ØªÙˆÙ„ÛŒØ¯ Ù…ÙˆØ¬ Ø¨Ø± Ø§Ø³Ø§Ø³ ØªØ±Ú©ÛŒØ¨ -----

def harmonic_wave(t, combo): if combo == 'Ù‡ÛŒÚ†': return np.zeros_like(t) elif combo == 'ØªØ¹Ø§Ù…Ù„': return np.sin(2 * np.pi * 5 * t) elif combo == 'Ù†ÛŒÙ…Ù‡ ÙØ¹Ø§Ù„': return 0.5 * np.sin(2 * np.pi * 3 * t) elif combo == 'Ù†ÛŒÙ…Ù‡ Ø®Ø§Ù…ÙˆØ´': return 0.5 * np.sin(2 * np.pi * 7 * t) else: return np.zeros_like(t)

